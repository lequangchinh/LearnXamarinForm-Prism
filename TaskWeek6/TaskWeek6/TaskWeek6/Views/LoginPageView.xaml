<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskWeek6.Views.LoginPageView"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="User Name:" WidthRequest="100"/>
                <Entry x:Name="etrUserName" Text="{Binding UserName}" Placeholder="User Name" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="Password:" WidthRequest="100"/>
                <Entry x:Name="etrPass" Text="{Binding PassWord}" Placeholder="Password" IsPassword="True"/>
            </StackLayout>
            
            
            <StackLayout HorizontalOptions="Center">
                <Button Text="Login" Command="{Binding NavigateCommand}"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>